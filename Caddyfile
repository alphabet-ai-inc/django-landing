{
    email jpassano@gmail.com
    auto_https off
}

landing-dev.aztech-ai.com {
    log {
        output stdout
    }

    # Static files - убираем /static/ из пути
    handle /static/* {
        root * /app/staticfiles
        uri strip_prefix /static
        file_server
    }

    # Media files - убираем /media/ из пути
    handle /media/* {
        root * /app/media
        uri strip_prefix /media
        file_server
    }

    # Django
    reverse_proxy app:8000
}