localhost:80 {
    # Static files
    @static {
        path /static/*
    }
    handle @static {
        root * /app/staticfiles
        file_server
    }

    # Media files
    @media {
        path /media/*
    }
    handle @media {
        root * /app/media
        file_server
    }

    # Django
    reverse_proxy app:8000
}
